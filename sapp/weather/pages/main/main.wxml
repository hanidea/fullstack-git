<view class="content">
    <view class="today">
        <view class="info">
            <view class="temp">  {{today.wendu}}℃ </view>
            <view class="weather"> {{today.todayInfo.type}} {{today.todayInfo.fengxiang}} {{feng}}</view>
            <view > 友情提示： {{today.ganmao}}</view>
            <view class="city"> {{city}}</view>
        </view>
    </view>

<import src="../template/itemtpl"/>
<view class="future" >
    <block wx:for="{{future}}" wx:key="key">
         <template is="future-item" data="{{item}}"/>
    </block>
 </view>

</view>